{
  "expo": {
    "name": "De Olho na Validade",
    "slug": "de-olho-na-validade",
    "version": "2.3.0",
    "orientation": "portrait",
    "icon": "./src/assets/logo.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./src/assets/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.osmarcruz.deolhonavalidade",
      "infoPlist": {
        "NSCameraUsageDescription": "Precisamos da câmera para ler códigos de barras e tirar fotos dos produtos.",
        "NSPhotoLibraryUsageDescription": "Precisamos acessar suas fotos para salvar os produtos.",
        "NSPhotoLibraryAddUsageDescription": "Precisamos salvar backups e fotos na sua galeria."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/logo.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.osmarcruz.deolhonavalidade",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "NOTIFICATIONS",
        "SCHEDULE_EXACT_ALARM",
        "VIBRATE"
      ]
    },
    "web": {
      "favicon": "./src/assets/logo.png"
    },
    "plugins": [
      "expo-font",
      "expo-sqlite",
      "@react-native-community/datetimepicker",
      [
        "expo-camera",
        {
          "cameraPermission": "Precisamos da câmera para ler códigos de barras e tirar fotos dos produtos."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./src/assets/logo.png",
          "color": "#0D1B2A",
          "sounds": []
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Permitir acesso às fotos?",
          "savePhotosPermission": "Permitir salvar fotos?",
          "isAccessMediaLocationEnabled": true
        }
      ],
      [
        "expo-navigation-bar",
        {
          "visible": "leanback",
          "barStyle": "light-content",
          "backgroundColor": "#0D1B2A"
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true,
            "kotlinVersion": "1.9.23"
          }
        }
      ],
      "expo-file-system"
    ],
    "extra": {
      "eas": {
        "projectId": "a5e461c0-f2ac-4aa8-9d33-159e97429eae"
      }
    }
  }
}
